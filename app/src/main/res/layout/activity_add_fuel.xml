<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFuelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtxt_addfuel_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Matricula"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtxt_addfuel_litres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Litros"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtxt_addfuel_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Precio/Litro"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/butaddfuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="butaddfuel"
            android:text="AÃ±adir" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>