<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRevisionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewRevision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÑADIR REVISION"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtxt_addrev_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Km"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtxt_addrev_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Fecha"
                android:inputType="date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chckbox_addrev_oil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceite" />

            <CheckBox
                android:id="@+id/chckbox_addrev_wheels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruedas" />

            <CheckBox
                android:id="@+id/chck_addrev_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filtros" />

            <CheckBox
                android:id="@+id/chck_addrev_brakedisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Discos Freno" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkc_addrev_anticongelante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anticongelante" />

            <CheckBox
                android:id="@+id/chck_addrev_windowclean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiaparabrisas" />
        </LinearLayout>
        <Button
            android:id="@+id/butadd_addrev_addbut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addRev"
            android:text="Añadir" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>